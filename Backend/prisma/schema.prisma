generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model video {
  id  Int @id @default(autoincrement())
  title String
  description String
  thumbnailUrl  String?  @default("https://via.placeholder.com/1600*900.webp")
  watched Boolean @default(false)
  name  String
}

model Message {
  id    Int @id @default(autoincrement())
  text  String
  txHash  String
  to    String
  from  String
  message String
  createdAt DateTime @default(now())
}